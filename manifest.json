{
  "name": "DW Inbox Opener",
  "manifest_version": 3,
  "version": "1.0",
  "action": {
    "default_icon": {
      "16": "icon16.png",
      "32": "icon32.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "description": "Opens X number of unread notifications from the Dreamwidth inbox",
  "permissions": [
    "activeTab",
    "tabs"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.dreamwidth.org/inbox/?page=*view=unread"],
      "js": ["openParentLink.js"]
    }
  ]
}